extends template.pug

block scripts
block style 
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/tiny-slider.css")
  style
    include ../static/css/MangaDetails.css
    //- include ../static/css/media.css
block content 
  p#mangaName.hide #{mangaId}
  div#AnimeDetails-container
    div.anime-title-div 
      p.anime-title 
    div.anime-img-Also-details
      div#anime-img-Also
        img#anime-img(src="#")
        a#bookmark-link(href="#") Bookmark 
      div.anime-details
        div.anime-title-div 
          p.anime-title.animeListed
        //- div 
        //-   p#anime-other-names 
        div 
          p#anime-description
        div.question-section 
          p.question Genre:
          div.anime-genre-container
        div.question-section 
          p.question Total Episodes:
          p#anime-total-episodes
        div.question-section 
          p.question Type:
          p#anime-type 
        div.question-section 
          p.question Released Date:
          p#anime-releaseDate
        div.question-section 
          p.question Status:
          p#anime-Status.genre-btn
    div#recomendations-btn
      h1 Recomendations
      div#controls
        button.previous
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512")
